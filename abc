saveExchangeRate(): void {
  // Fallback if no date selected
  const effectiveDate: Date = this.formModel.effectiveDate ?? new Date();

  const newEntry = {
    fromCurrency: this.formModel.fromCurrency,
    toCurrency: this.formModel.toCurrency,
    rate: this.formModel.rate,
    effectiveDate
  };

  if (this.isEditMode && this.editIndex !== null) {
    this.exchangeRates[this.editIndex] = newEntry;
  } else {
    this.exchangeRates.push(newEntry);
  }

  this.closePopup();
}