Here is the complete Angular 17 standalone sidebar component, updated based on your screenshots and files. This includes the .ts, .html, and .css files, with a collapsible sidebar and expandable menu item (Reference Data):


---

sidebar.component.ts

import { Component } from '@angular/core';
import { NgIf, NgFor } from '@angular/common';
import { MatIconModule } from '@angular/material/icon';

@Component({
  selector: 'app-sidebar',
  standalone: true,
  imports: [NgIf, NgFor, MatIconModule],
  templateUrl: './sidebar.component.html',
  styleUrls: ['./sidebar.component.css']
})
export class SidebarComponent {
  isCollapsed = true;
  referenceDataExpanded = false;

  toggleSidebar() {
    this.isCollapsed = !this.isCollapsed;
  }

  toggleReferenceData() {
    this.referenceDataExpanded = !this.referenceDataExpanded;
  }
}


---

sidebar.component.html

<div class="sidebar-container" [class.collapsed]="isCollapsed">
  <button class="toggle-button" (click)="toggleSidebar()">
    <mat-icon>{{ isCollapsed ? 'menu' : 'chevron_left' }}</mat-icon>
  </button>

  <ng-container *ngIf="!isCollapsed">
    <ul class="menu">
      <li>
        <mat-icon>apartment</mat-icon>
        <span>Manage Company</span>
      </li>
      <li>
        <mat-icon>description</mat-icon>
        <span>Recon Master</span>
      </li>
      <li>
        <mat-icon>category</mat-icon>
        <span>Context Type</span>
      </li>
      <li (click)="toggleReferenceData()" class="expandable">
        <mat-icon>inventory_2</mat-icon>
        <span>Reference Data</span>
        <mat-icon class="expand-icon">{{ referenceDataExpanded ? 'expand_less' : 'expand_more' }}</mat-icon>
      </li>
      <ul class="submenu" *ngIf="referenceDataExpanded">
        <li>Accounting Period Groups</li>
        <li>Calendars</li>
        <li>Counterparties</li>
        <li>Currencies</li>
        <li>Exchange Rates</li>
        <li>Item Types</li>
        <li>Reason Codes</li>
        <li>Securities</li>
        <li>Tags</li>
      </ul>
      <li>
        <mat-icon>search</mat-icon>
        <span>Audit</span>
      </li>
      <li>
        <mat-icon>list_alt</mat-icon>
        <span>Logs</span>
      </li>
    </ul>
  </ng-container>

  <div class="bottom-toggle">
    <mat-icon>chevron_left</mat-icon>
  </div>
</div>


