import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { NgChartsModule } from 'ng2-charts';
import { ChartConfiguration, ChartType } from 'chart.js';

@Component({
  selector: 'app-status-pie-chart',
  standalone: true,
  imports: [CommonModule, NgChartsModule],
  templateUrl: './status-pie-chart.component.html',
  styleUrls: ['./status-pie-chart.component.css']
})
export class StatusPieChartComponent {
  public pieChartOptions: ChartConfiguration<'pie'>['options'] = {
    responsive: true,
    plugins: {
      legend: {
        position: 'top',
      },
      title: {
        display: true,
        text: 'Status Overview'
      }
    }
  };

  public pieChartData = {
    labels: ['Completed', 'In Progress', 'Pending'],
    datasets: [
      {
        data: [40, 35, 25]
      }
    ]
  };

  public pieChartType: ChartType = 'pie';
}



<div style="max-width: 500px; margin: auto;">
  <canvas baseChart
          [data]="pieChartData"
          [type]="pieChartType"
          [options]="pieChartOptions">
  </canvas>
</div>



import { bootstrapApplication } from '@angular/platform-browser';
import { StatusPieChartComponent } from './app/status-pie-chart/status-pie-chart.component';

bootstrapApplication(StatusPieChartComponent)
  .catch(err => console.error(err));


