import { Component } from '@angular/core';

@Component({
  selector: 'app-sidebar',
  standalone: true,
  imports: [],
  templateUrl: './sidebar.component.html',
  styleUrls: ['./sidebar.component.css'],
})
export class SidebarComponent {
  isCollapsed = false;

  toggleSidebar() {
    this.isCollapsed = !this.isCollapsed;
  }
}



<div class="sidebar-container" [class.collapsed]="isCollapsed">
  <button class="toggle-button" (click)="toggleSidebar()">
    <mat-icon>{{ isCollapsed ? 'chevron_right' : 'chevron_left' }}</mat-icon>
  </button>

  <ng-container *ngIf="!isCollapsed">
    <ul class="menu">
      <li><mat-icon>apartment</mat-icon> Manage Company</li>
      <li><mat-icon>description</mat-icon> Recon Master</li>
      <li><mat-icon>category</mat-icon> Context Type</li>
      <li class="expansion-header">
        <mat-icon>inventory_2</mat-icon> Reference Data
      </li>
      <ul class="submenu">
        <li>Accounting Period Groups</li>
        <li>Calendars</li>
        <li>Counterparties</li>
        <li>Currencies</li>
        <li>Exchange Rates</li>
        <li>Item Types</li>
        <li>Reason Codes</li>
        <li>Securities</li>
        <li>Tags</li>
      </ul>
      <li><mat-icon>search</mat-icon> Audit</li>
      <li><mat-icon>list_alt</mat-icon> Logs</li>
    </ul>
  </ng-container>
</div>





