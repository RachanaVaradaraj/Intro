import { Component } from '@angular/core';
import { RouterModule } from '@angular/router';

@Component({
  selector: 'app-sidebar',
  standalone: true,
  imports: [RouterModule],
  templateUrl: './sidebar.component.html',
  styleUrls: ['./sidebar.component.scss'],
})
export class SidebarComponent {
  collapsed = false;
  toggleSidebar() {
    this.collapsed = !this.collapsed;
  }
}




<div class="sidebar" [class.collapsed]="collapsed">
  <div class="top-bar">
    <button (click)="toggleSidebar()">â˜°</button>
    <i class="icon-home"></i>
    <i class="icon-folder"></i>
    <i class="icon-search"></i>
  </div>

  <ul class="nav">
    <li routerLink="/home" routerLinkActive="active">Home</li>
    <li>
      <div (click)="collapsed = !collapsed">Manage Company</div>
      <ul *ngIf="!collapsed">
        <li routerLink="/manage-company" routerLinkActive="active">View</li>
      </ul>
    </li>
    <li routerLink="/recon-master" routerLinkActive="active">Recon Master</li>
    <li routerLink="/context-type" routerLinkActive="active">Context Type</li>
    <li>
      <div (click)="collapsed = !collapsed">Reference Data</div>
      <ul *ngIf="!collapsed">
        <li routerLink="/accounting-period-groups" routerLinkActive="active">
          Accounting Period Groups
        </li>
      </ul>
    </li>
  </ul>
</div>




.sidebar {
  width: 250px;
  background-color: #004e66;
  color: white;
  transition: width 0.3s;
  overflow: hidden;

  &.collapsed {
    width: 60px;
  }

  .top-bar {
    display: flex;
    gap: 10px;
    padding: 10px;
    align-items: center;
  }

  .nav {
    list-style: none;
    padding: 0;
    margin: 0;

    li {
      padding: 10px;
      cursor: pointer;

      &:hover,
      &.active {
        background-color: #00728c;
      }

      ul {
        list-style: none;
        padding-left: 20px;
      }
    }
  }

  i {
    font-size: 16px;
    cursor: pointer;
  }
}





import { Component } from '@angular/core';

@Component({
  selector: 'app-header',
  standalone: true,
  templateUrl: './header.component.html',
  styleUrls: ['./header.component.scss'],
})
export class HeaderComponent {}





<header class="header">
  <h1>System Setup</h1>
</header>





.header {
  background-color: #00728c;
  color: white;
  padding: 15px;
