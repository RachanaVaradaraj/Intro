<div class="app-container">
  <app-header (toggleSidebar)="sidebarCollapsed = !sidebarCollapsed"></app-header>
  <div class="main-body">
    <app-sidebar [collapsed]="sidebarCollapsed"></app-sidebar>
    <div class="content">
      <router-outlet></router-outlet>
    </div>
  </div>
</div>




<header class="header">
  <div class="left-icons">
    <button (click)="toggleSidebar.emit()">
      <i class="material-icons">menu</i>
    </button>
    <i class="material-icons">home</i>
    <i class="material-icons">folder</i>
  </div>
  <div class="right-icons">
    <i class="material-icons">search</i>
  </div>
</header>




<aside class="sidebar" [class.collapsed]="collapsed">
  <nav>
    <ul>
      <li>
        <a routerLink="/manage-company">
          <i class="material-icons">business</i> <span *ngIf="!collapsed">Manage Company</span>
        </a>
      </li>
      <li>
        <a (click)="toggleSubMenu('recon')">
          <i class="material-icons">settings</i> <span *ngIf="!collapsed">Recon Master</span>
        </a>
        <ul *ngIf="expanded.recon && !collapsed">
          <li><a routerLink="/recon-master/config">Recon Config</a></li>
        </ul>
      </li>
      <li>
        <a routerLink="/context-type">
          <i class="material-icons">category</i> <span *ngIf="!collapsed">Context Type</span>
        </a>
      </li>
      <li>
        <a (click)="toggleSubMenu('refData')">
          <i class="material-icons">folder_open</i> <span *ngIf="!collapsed">Reference Data</span>
        </a>
        <ul *ngIf="expanded.refData && !collapsed">
          <li><a routerLink="/reference-data/accounting-period-groups">Accounting Period Groups</a></li>
          <li><a routerLink="/reference-data/calendars">Calendars</a></li>
          <li><a routerLink="/reference-data/counterparties">Counterparties</a></li>
          <!-- Add others similarly -->
        </ul>
      </li>
    </ul>
  </nav>
  <button class="collapse-btn" (click)="toggleCollapsed()">
    <i class="material-icons">{{ collapsed ? 'chevron_right' : 'chevron_left' }}</i>
  </button>
</aside>




import { Component, Input, Output, EventEmitter } from '@angular/core';

@Component({
  selector: 'app-sidebar',
  templateUrl: './sidebar.component.html',
  styleUrls: ['./sidebar.component.css'],
})
export class SidebarComponent {
  @Input() collapsed = false;
  expanded: any = {
    recon: false,
    refData: false,
  };

  toggleSubMenu(menu: string) {
    this.expanded[menu] = !this.expanded[menu];
  }

  toggleCollapsed() {
    this.collapsed = !this.collapsed;
  }
}




