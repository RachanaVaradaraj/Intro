  width: 100%;
  border-collapse: collapse;
  margin-top: 1rem;
}

.rates-table th, .rates-table td {
  border: 1px solid #ccc;
  padding: 0.5rem;
  text-align: left;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
