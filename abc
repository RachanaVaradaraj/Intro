<div class="login-container">
  <!-- Carousel Section -->
  <div class="carousel-section">
    <div class="carousel">
      <div
        class="carousel-slide"
        *ngFor="let slide of slides; let i = index"
        [class.active]="i === currentSlide"
      >
        <h2>{{ slide.title }}</h2>
        <p>{{ slide.description }}</p>
      </div>
    </div>
  </div>

  <!-- Login Card Section -->
  <div class="glass-card">
    <div class="logo">
      <img src="assets/LOGO.png" alt="BNP Paribas Logo" />
    </div>
    <h2>Recon Nextgen Login</h2>

    <form [formGroup]="loginForm" (ngSubmit)="onSubmit()">
      <div class="form-group">
        <input
          type="text"
          formControlName="username"
          placeholder="Username"
          [class.invalid]="submitted && f['username'].errors"
        />
        <div *ngIf="submitted && f['username'].errors" class="error">
          Username is required.
        </div>
      </div>

      <div class="form-group">
        <input
          type="password"
          formControlName="password"
          placeholder="Password"
          [class.invalid]="submitted && f['password'].errors"
        />
        <div *ngIf="submitted && f['password'].errors" class="error">
          Password is required (min 6 chars).
        </div>
      </div>

      <button type="submit">Login</button>
      <span>or</span>
      <span>Login with SSO</span>
    </form>
  </div>
</div>










import { Component, OnInit } from '@angular/core';
import { FormBuilder, FormGroup, Validators } from '@angular/forms';

@Component({
  selector: 'app-login',
  templateUrl: './login.component.html',
  styleUrls: ['./login.component.css']
})
export class LoginComponent implements OnInit {
  loginForm!: FormGroup;
  submitted = false;

  slides = [
    { title: 'Welcome to Recon', description: 'Reconcile your data with accuracy and speed.' },
    { title: 'Secure & Fast', description: 'Your data is protected with advanced security.' },
    { title: 'Nextgen UI', description: 'Experience a modern, responsive design.' }
  ];
  currentSlide = 0;

  constructor(private fb: FormBuilder) {}

  ngOnInit(): void {
    this.loginForm = this.fb.group({
      username: ['', Validators.required],
      password: ['', [Validators.required, Validators.minLength(6)]]
    });

    setInterval(() => {
      this.currentSlide = (this.currentSlide + 1) % this.slides.length;
    }, 3000); // Slide every 3 seconds
  }

  get f() {
    return this.loginForm.controls;
  }

  onSubmit(): void {
    this.submitted = true;
    if (this.loginForm.invalid) return;
    console.log('Login successful', this.loginForm.value);
    // Add login logic here
  }
}









